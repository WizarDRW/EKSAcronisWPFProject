<Window x:Class="EKS.Forms.MainProcessesForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EKS.Forms"
        mc:Ignorable="d"
        Title="Elektronik Kontrol Sistemleri Yedekleme İş Veri Tabanı" Height="750" Width="1020" Closed="MPFClosed" Icon="/EKS;component/Resource/logo.ico" WindowState="Maximized" >
    <Grid>
        <Rectangle Fill="#FF6B6BFF" Height="60" Stroke="#FF6B6BFF" VerticalAlignment="Top"/>
        <Label x:Name="CompanyNameLBL" Content="Elektronik Kontrol Sistemleri" HorizontalAlignment="Left" Margin="20,4,0,0" VerticalAlignment="Top" Width="332" Foreground="White" FontFamily="Verdana"/>
        <Label x:Name="VersionLBL" Content="v1.0.0.0" HorizontalAlignment="Left" Margin="20,29,0,0" VerticalAlignment="Top" Width="332" Foreground="White" FontFamily="Verdana"/>
        <Menu HorizontalAlignment="Left" Background="Azure" Margin="0,60,0,0" Width="104">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel />
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem x:Name="DatabaseListMenu" Click="DatabaseListMenuClick" >
                <MenuItem.Header>
                    <StackPanel>
                        <Image Width="85" Height="70" Source="/EKS;component/Resource/DatabaseList.png"></Image>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem x:Name="DatabaseAddMenu" Click="DatabaseAddMenuClick" >
                <MenuItem.Header>
                    <StackPanel>
                        <Image Width="90" Height="70" Source="/EKS;component/Resource/DatabaseAdd.png"></Image>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem x:Name="DatabaseDeleteMenu" Click="DatabaseDeleteMenuClick">
                <MenuItem.Header>
                    <StackPanel>
                        <Image Width="90" Height="70" Source="/EKS;component/Resource/DatabaseDelete.png"></Image>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem x:Name="DatabaseUpdateMenu" Click="DatabaseUpdateMenuClick">
                <MenuItem.Header>
                    <StackPanel>
                        <Image Width="90" Height="70" Source="/EKS;component/Resource/DatabaseUpdate.png"></Image>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem x:Name="DatabaseFindMenu" Click="DatabaseFindMenuClick">
                <MenuItem.Header>
                    <StackPanel>
                        <Image Width="90" Height="70" Source="/EKS;component/Resource/DatabaseFind.png"></Image>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem x:Name="UsersControlMenu" Click="UsersControlMenuClick">
                <MenuItem.Header>
                    <StackPanel>
                        <Image Width="90" Height="70" Source="/EKS;component/Resource/Users.png"></Image>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>
        </Menu>

        <DataGrid x:Name="MainDataGrid" Margin="109,65,10,10" HorizontalGridLinesBrush="#FF3E3E3E" VerticalGridLinesBrush="#FF3E3E3E" Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}"/>
    </Grid>
</Window>
